#include <stdio.h>

int main() {
    int arr[] = {};
    int length = 0;
    
    int num;
    for (int i = 0; ; i++) {
        printf("Napis cislo(napis 0 pro ukonceni): ");
        scanf("%d", &num);
        if (num == 0) {
            length = i;
            break;
        }
        arr[i] = num;
        length++;
    };
    
    for (int i = 0; i < length; i++) {
        printf("Cislo %d: %d\n", (i + 1), arr[i]);
    };
    
    printf("Zadali jste %d cisel", length);
    
    return 0;
}